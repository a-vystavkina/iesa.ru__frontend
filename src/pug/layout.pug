include mixins
doctype html
html(class="page" lang="en")
  head
    block meta
      title Вёрстка

    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    link(rel="shortcut icon" href="favicon/favicon.ico" type="image/x-icon")
    link(rel="icon" href="favicon/favicon.ico" type="image/x-icon")

    link(rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png")
    meta(name="msapplication-TileColor" content="#2992d0")
    meta(name="theme-color" content="#ffffff")

    link(href="css/libs.min.css" rel="stylesheet" type="text/css")
    link(href="css/main.css" rel="stylesheet" type="text/css")

    block head
  
  body
    .page__inner

      +page-header('page__header')

      block breadcrumb
        .page__breadcrumb.page-container
          include ../blocks/breadcrumb/index
      
      main.page__content
        block content
      
      block footer
        +page-footer('page__footer')
  
    script(src="js/libs.min.js")
    script(src="js/main.js")