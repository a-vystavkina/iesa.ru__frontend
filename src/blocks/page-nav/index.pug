mixin page-nav(mods)
  -
    let allMods = '';
    if (typeof (mods) !== 'undefined' && mods) {
      let regExp = /\s*,\s*/;
      let modsList = mods.split(regExp);
      allMods = modsList.join(' ');
    }

  .page-nav(class=allMods)
    .page-container.page-nav__inner
      .page-nav__logo
        picture
          img(src="images/logo.svg", width="123", height="35" alt="")
      .page-nav__menu
        include ../main-menu/index
      .page-nav__search
        include ../header-search/index